# Lock screen and turn off display after inactivity (or immediately with SIGUSR1)
timeout 600 'swaylock -C ~/.config/hypr/apps/swaylock/config && sleep 1 && hyprctl dispatch dpms off' resume 'hyprctl dispatch dpms on && pkill swaync; ~/.config/hypr/apps/swaync/run.sh'

# Lock screen when receiving lock signal (e.g., loginctl lock-session)
lock 'pidof swaylock || swaylock -C ~/.config/hypr/apps/swaylock/config'

# Lock before system sleep
before-sleep 'swaylock -C ~/.config/hypr/apps/swaylock/config'

# Restore displays and restart swaync after resume
after-resume 'hyprctl dispatch dpms on && pkill swaync; ~/.config/hypr/apps/swaync/run.sh'